{
  "source": [
    "tokens/color.json",
    "tokens/font.json",
    "tokens/spacing.json",
    "tokens/layer.json",
    "tokens/opacity.json",
    "tokens/borders.json",
    "tokens/border-radius.json",
    "tokens/animation.json",
    "tokens/icon.json"
  ],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "options": {
        "outputReferences": true,
        "showFileHeader": true
      },
      "files": [
        {
          "destination": "../../../assets/scss/tokens/_tokens.scss",
          "format": "scss/variables"
        }
      ]
    },
    "cssVars": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "options": {
        "outputReferences": false,
        "showFileHeader": true
      },
      "files": [
        {
          "destination": "../../../assets/scss/tokens/_tokens-map.scss",
          "format": "scss/map-flat",
          "mapName": "vw"
        }
      ]
    }
  }
}
