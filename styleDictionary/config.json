{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "options": {
        "outputReferences": true,
        "showFileHeader": true
      },
      "files": [
        {
          "destination": "../../../assets/scss/tokens/_tokens.scss",
          "format": "scss/variables"
        }
      ]
    }
  }
}
