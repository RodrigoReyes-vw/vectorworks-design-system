{
  "source": [
    "tokens/color.json",
    "tokens/font.json",
    "tokens/spacing.json",
    "tokens/layer.json",
    "tokens/opacity.json",
    "tokens/borders.json",
    "tokens/border-radius.json",
    "tokens/animation.json",
    "tokens/icon.json"
  ],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "options": {
        "outputReferences": true,
        "showFileHeader": true
      },
      "files": [
        {
          "destination": "../../../assets/scss/tokens/_tokens.scss",
          "format": "scss/variables"
        }
      ]
    },
    "css": {
      "transformGroup": "css",
      "files": [
        {
          "format": "css/variables",
          "outputReferences": true,
          "destination": "../docs/docs/.vitepress/theme/variables.css"
        }
      ]
    }
  }
}
